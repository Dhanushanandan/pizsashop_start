<?xml version='1.0' encoding='utf-8'?>
<LinearLayout xmlns:android='http://schemas.android.com/apk/res/android'
    android:orientation='vertical' android:layout_width='match_parent'
    android:layout_height='match_parent' android:padding='16dp'>

    <EditText android:id='@+id/street' android:layout_width='match_parent' android:layout_height='wrap_content' android:hint='Street'/>
    <EditText android:id='@+id/city' android:layout_width='match_parent' android:layout_height='wrap_content' android:hint='City'/>
    <EditText android:id='@+id/postal' android:layout_width='match_parent' android:layout_height='wrap_content' android:hint='Postal Code'/>
    <Button android:id='@+id/saveAddressBtn' android:layout_width='match_parent' android:layout_height='wrap_content' android:text='Save'/>
</LinearLayout>
